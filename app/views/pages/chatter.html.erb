<div class="panel panel-default">
  <div class="panel-body">
    <div class="container chat" id="chatbox">
    	<% @messages.each do|message| %>
				<%= render 'messages/message', message: message %>
			<% end %>
    </div>
    <div class="panel-footer">
      <%if current_user %>
        <div class="input-group">
          <%= form_with model: @message, remote: true, class: "form-chat" do |f| %>
            <%= f.text_field :body, placeholder: "Напиши что-нибудь...", autocomplete: 'off', class: "input-chat form-control" %>
            <span class="input-group-btn">
              <%= f.submit "Отправить", class: "btn-chat" %>
            </span>
          <% end %>
        </div>
      <% else %>
        <p class="sign-in-please"> Вы должны <%=link_to "войти", new_user_session_path %>, чтобы оставить сообщение.</p>
      <% end %>
    </div>
  </div>
</div>

